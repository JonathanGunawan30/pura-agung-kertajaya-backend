  "components": {
    "securitySchemes": {
      "cookieAuth": {
        "type": "apiKey",
        "in": "cookie",
        "name": "access_token",
        "description": "JWT token stored in HttpOnly cookie"
      }
    },
    "schemas": {
      "UserResponse": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "example": "u_123" },
          "name": { "type": "string", "example": "Admin CMS" },
          "email": { "type": "string", "example": "admin@example.com" },
          "created_at": { "type": "number", "example": 1739650180 },
          "updated_at": { "type": "number", "example": 1739650180 }
        }
      },
      "TestimonialResponse": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "example": "t_abc123" },
          "name": { "type": "string", "example": "John Doe" },
          "avatar_url": { "type": "string", "example": "https://r2.example.com/avatar.png" },
          "rating": { "type": "integer", "example": 5 },
          "comment": { "type": "string", "example": "Pelayanan sangat memuaskan!" },
          "is_active": { "type": "boolean", "example": true },
          "order_index": { "type": "integer", "example": 1 },
          "created_at": { "type": "number", "example": 1739650180 },
          "updated_at": { "type": "number", "example": 1739650180 }
        }
      },
      "TestimonialCreateRequest": {
        "type": "object",
        "properties": {
          "name": { "type": "string", "example": "Jane Doe" },
          "avatar_url": { "type": "string", "example": "https://r2.example.com/avatar.png" },
          "rating": { "type": "integer", "example": 4 },
          "comment": { "type": "string", "example": "Sangat membantu." },
          "is_active": { "type": "boolean", "example": true },
          "order_index": { "type": "integer", "example": 2 }
        },
        "required": ["name", "rating", "comment", "is_active", "order_index"]
      },
      "TestimonialUpdateRequest": {
        "type": "object",
        "description": "Semua field opsional. Kirim hanya field yang ingin di-update.",
        "properties": {
          "name": { "type": "string", "example": "Jane Doe Updated" },
          "avatar_url": { "type": "string", "example": "https://r2.example.com/new-avatar.png" },
          "rating": { "type": "integer", "example": 5 },
          "comment": { "type": "string", "example": "Sangat membantu (updated)." },
          "is_active": { "type": "boolean", "example": false },
          "order_index": { "type": "integer", "example": 1 }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "errors": {
            "type": "string",
            "example": "Detail pesan error"
          }
        }
      },
      "HeroSlideResponse": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "example": "hs_abc123" },
          "image_url": { "type": "string", "example": "https://r2.example.com/slide1.png" },
          "order_index": { "type": "integer", "example": 1 },
          "is_active": { "type": "boolean", "example": true },
          "created_at": { "type": "number", "example": 1739650180 },
          "updated_at": { "type": "number", "example": 1739650180 }
        }
      },
      "HeroSlideCreateRequest": {
        "type": "object",
        "properties": {
          "image_url": { "type": "string", "example": "https://r2.example.com/new-slide.png" },
          "order_index": { "type": "integer", "example": 2 },
          "is_active": { "type": "boolean", "example": true }
        },
        "required": ["image_url", "order_index", "is_active"]
      },
      "HeroSlideUpdateRequest": {
        "type": "object",
        "description": "Semua field opsional. Kirim hanya field yang ingin di-update.",
        "properties": {
          "image_url": { "type": "string", "example": "https://r2.example.com/updated-slide.png" },
          "order_index": { "type": "integer", "example": 1 },
          "is_active": { "type": "boolean", "example": false }
        }
      }
    },
    "responses": {
      "UnauthorizedError": {
        "description": "Unauthorized — Missing or invalid JWT cookie",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "errors": {
