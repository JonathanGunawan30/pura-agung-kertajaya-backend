{
  "openapi": "3.0.3",
  "info": {
    "title": "Pura Agung Kertajaya API",
    "description": "Pura Agung Kertajaya API Specification",
    "version": "1.0.1"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "paths": {
    "/api/users/_login": {
      "post": {
        "tags": ["User API"],
        "description": "Login admin user (internal only). Token is returned via HttpOnly cookie.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string", "example": "admin@example.com" },
                  "password": { "type": "string", "example": "12345678" },
                  "recaptcha_token": {
                    "type": "string",
                    "description": "reCAPTCHA v3 token"
                  }
                },
                "required": ["email", "password", "recaptcha_token"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login success — JWT set in HttpOnly cookie",
            "headers": {
              "Set-Cookie": {
                "description": "JWT Access Token (HttpOnly, Secure, SameSite=Strict)",
                "schema": { "type": "string" }
              }
            },
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "properties": {
                        "message": {
                          "type": "string",
                          "example": "Login successful"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Invalid email or password",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "429": {
            "description": "Too many login attempts",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/users/_logout": {
      "post": {
        "tags": ["User API"],
        "description": "Logout user and revoke JWT (invalidate cookie + Redis blacklist)",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Logout success — JWT cookie cleared",
            "headers": {
              "Set-Cookie": {
                "description": "Clears JWT cookie",
                "schema": { "type": "string" }
              }
            },
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": { "type": "boolean", "example": true }
                  }
                }
              }
            }
          },
          "401": { "$ref": "#/components/responses/UnauthorizedError" }
        }
      }
    },
    "/api/users/_current": {
      "get": {
        "tags": ["User API"],
        "description": "Get current logged-in user info (based on HttpOnly cookie)",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Success get current user",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "$ref": "#/components/schemas/UserResponse"
                    }
                  }
                }
              }
            }
          },
          "401": { "$ref": "#/components/responses/UnauthorizedError" }
        }
      },
      "patch": {
        "tags": ["User API"],
        "description": "Update current user profile (name or password)",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string", "example": "Admin Baru" },
                  "password": {
                    "type": "string",
                    "example": "newpassword123"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success update current user",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "$ref": "#/components/schemas/UserResponse"
                    }
                  }
                }
              }
            }
          },
          "401": { "$ref": "#/components/responses/UnauthorizedError" }
        }
      }
    },
    "/api/storage/upload": {
      "post": {
        "tags": ["Storage API"],
        "description": "Upload file to Cloudflare R2 storage (requires authentication)",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary",
                    "description": "File to upload (max size depends on server configuration)"
                  }
                },
                "required": ["file"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "File uploaded successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "properties": {
                        "url": {
                          "type": "string",
                          "example": "https://your-domain.com/uploads/filename_1234567890.jpg",
                          "description": "Public URL of uploaded file"
                        },
                        "filename": {
                          "type": "string",
                          "example": "filename.jpg",
                          "description": "Original filename"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request — no file uploaded",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "errors": {
                      "type": "string",
                      "example": "No file uploaded"
                    }
                  }
                }
              }
            }
          },
          "401": { "$ref": "#/components/responses/UnauthorizedError" },
          "500": { "$ref": "#/components/responses/InternalServerError" }
        }
      }
    },
    "/api/storage/delete": {
      "delete": {
        "tags": ["Storage API"],
        "description": "Delete file from Cloudflare R2 storage (requires authentication)",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "parameters": [
          {
            "name": "key",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "example": "uploads/filename_1234567890.jpg"
            },
            "description": "Storage key/path of the file to delete"
          }
        ],
        "responses": {
          "200": {
            "description": "File deleted successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "string",
                      "example": "File deleted successfully"
                    }
                  }
                }
              }
            }
          },
          "400": { "$ref": "#/components/responses/BadRequestError" },
          "401": { "$ref": "#/components/responses/UnauthorizedError" },
          "500": { "$ref": "#/components/responses/InternalServerError" }
        }
      }
    },
    "/api/storage/presigned-url": {
      "get": {
        "tags": ["Storage API"],
        "description": "Generate presigned URL for temporary file access (requires authentication)",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "parameters": [
          {
            "name": "key",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "example": "uploads/filename_1234567890.jpg"
            },
            "description": "Storage key/path of the file"
          },
          {
            "name": "expiration",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 3600,
              "example": 3600
            },
            "description": "URL expiration time in seconds (default: 3600 = 1 hour)"
          }
        ],
        "responses": {
          "200": {
            "description": "Presigned URL generated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "properties": {
                        "url": {
                          "type": "string",
                          "example": "https://your-account-id.r2.cloudflarestorage.com/bucket/uploads/filename_1234567890.jpg?X-Amz-Algorithm=AWS4-HMAC-SHA256&X-Amz-Credential=...",
                          "description": "Presigned URL with temporary access token"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": { "$ref": "#/components/responses/BadRequestError" },
          "401": { "$ref": "#/components/responses/UnauthorizedError" },
          "500": { "$ref": "#/components/responses/InternalServerError" }
        }
      }
    },
